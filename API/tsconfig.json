{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"]
    },
    "outDir": "./dist",
    "rootDir": "."
  },
  "include": ["**/*.ts", "types"],
  "exclude": ["node_modules", "dist"],
}
